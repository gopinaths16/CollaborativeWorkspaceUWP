<Page
    x:Class="CollaborativeWorkspaceUWP.Views.TaskView"
    Name="UserTaskView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:template="using:CollaborativeWorkspaceUWP.Templates"
    xmlns:local="using:CollaborativeWorkspaceUWP.Views"
    xmlns:models="using:CollaborativeWorkspaceUWP.Models"
    xmlns:viewmodels="using:CollaborativeWorkspaceUWP.ViewModels"
    xmlns:customusercontrol="using:CollaborativeWorkspaceUWP.CustomControls.UserControls"
    xmlns:vm="using:CollaborativeWorkspaceUWP.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource MainBackgroundAcrylicBrush}"
    Loaded="Page_Loaded">

    <Page.DataContext>
        <vm:MainViewModel />
    </Page.DataContext>
    
    <Page.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>

                    <Style TargetType="PivotItem" x:Name="TaskTabItem">
                        <Setter Property="FontSize" Value="2" />
                    </Style>

                    <Style TargetType="StackPanel" x:Name="PivotRightHeader">
                        <Setter Property="Margin" Value="0, 10, 20, 0" />
                    </Style>

                    <Style TargetType="Grid" x:Name="ProjectTaskView">
                        <Setter Property="Margin" Value="0, 20, 0, 0" />
                    </Style>

                    <Style TargetType="ComboBox" x:Name="ComboBoxCustom">
                        <Setter Property="CornerRadius" Value="2" />
                        <Setter Property="Margin" Value="0, 5, 0, 20" />
                    </Style>

                    <Style TargetType="TextBlock" x:Name="TaskDetailsViewTitleStyle">
                        <Setter Property="FontSize" Value="50" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="HorizontalAlignment" Value="Center" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                    </Style>

                    <Style TargetType="Grid" x:Name="TaskDetailsViewGridDisplay">
                        <Setter Property="BorderThickness" Value="0.5" />
                        <Setter Property="CornerRadius" Value="5" />
                        <Setter Property="Background" Value="{StaticResource SecondaryAcrylicBrush}" />
                        <Setter Property="Margin" Value="10, 0, 0, 0" />
                        <Setter Property="Padding" Value="20" />
                    </Style>

                    <Style TargetType="customusercontrol:IconedLabelControl" x:Key="LabelStyles" >
                        <Setter Property="Margin" Value="10, 20, 0, 0" />
                        <Setter Property="VerticalAlignment" Value="Top" />
                    </Style>

                    <Style TargetType="Grid" x:Key="TaskListViewByProjectStyle">
                        <Setter Property="CornerRadius" Value="5"/>
                        <Setter Property="Background" Value="{StaticResource SecondaryAcrylicBrush}" />
                        <Setter Property="Padding" Value="5" />
                    </Style>

                    <Style TargetType="StackPanel" x:Key="AddTaskDialogStyle">
                        <Setter Property="CornerRadius" Value="2" />
                        <Setter Property="BorderThickness" Value="1" />
                        <Setter Property="BorderBrush" Value="Gray" />
                        <Setter Property="Padding" Value="20" />
                        <Setter Property="Margin" Value="5, 25, 10, 5" />
                    </Style>

                    <DataTemplate x:Key="ProjectListViewItemTemplate" 
                                  x:DataType="models:Project">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock FontFamily="Segoe Fluent Icons"
                                       Text="&#xE70B;"
                                       Margin="0, 4, 10, 0"
                                       Grid.Column="0"/>

                            <TextBlock Text="{Binding Name}"
                                       Grid.Column="1"
                                       TextWrapping="Wrap"
                                       TextTrimming="WordEllipsis"
                                       MaxLines="1"/>

                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Right"
                                        Grid.Column="2">
                            </StackPanel>

                        </Grid>
                    </DataTemplate>

                    <DataTemplate x:Key="TaskListViewDataTemplate"
                                  x:DataType="models:UserTask">
                        <Border BorderThickness="0, 0, 0, 0.5"
                                BorderBrush="{StaticResource SystemListLowColor}">
                            <Grid CornerRadius="5"
                                  Margin="20, 0, 0, 20"
                                  HorizontalAlignment="Stretch">
                                <CheckBox Grid.Row="0"
                                          Grid.Column="0"
                                          Content="{Binding Name}"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Top"
                                          Margin="5, 5, 0, 0"/>
                            </Grid>
                        </Border>
                    </DataTemplate>

                    <DataTemplate x:Key="SubTaskListViewDataTemplate"
                                  x:DataType="models:UserTask">
                        <Grid CornerRadius="5"
                              Margin="20, 0, 0, 20"
                              HorizontalAlignment="Stretch">
                            <CheckBox Grid.Row="0"
                                      Grid.Column="0"
                                      Content="{Binding Name}"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      Margin="5, 5, 0, 0"/>
                        </Grid>
                    </DataTemplate>

                    <DataTemplate x:Key="ComboboxPriorityItemTemplate"
                                  x:DataType="models:Priority">
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>

                    <DataTemplate x:Key="ComboboxStatusItemTemplate"
                                  x:DataType="models:Status">
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>

                    <DataTemplate x:Key="SelectTeamspaceComboboxTemplate"
                                  x:DataType="models:Teamspace">
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                    
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Page.Resources>

    <Grid Name="TaskViewPanel"
          Background="{StaticResource MainBackgroundAcrylicBrush}">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Pivot x:Name="TaskTabView"
               Grid.Row="1"
               Visibility="{Binding TeamspacesForCurrOrganization, Mode=OneWay, Converter={StaticResource CollectionToVisibilityConverter}}">


            <Pivot.RightHeader>
                <StackPanel Style="{StaticResource PivotRightHeader}">
                </StackPanel>
            </Pivot.RightHeader>

            <PivotItem>
                <PivotItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                   Text="&#xE70B;"
                                   FontSize="12"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"/>

                        <TextBlock Text="By Project"
                                   FontSize="12"
                                   Margin="5, 0, 0, 0"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"/>
                    </StackPanel>
                </PivotItem.Header>
                <Grid Name="ProjectTaskViewGrid"
                      Style="{StaticResource ProjectTaskView}">
                    

                    <SplitView Name="ProjectListSplitView"
                               IsPaneOpen="{x:Bind projectListViewModel.IsProjectListPaneOpen, Mode=OneWay}"
                               DisplayMode="Inline"
                               PaneBackground="{StaticResource MainBackgroundAcrylicBrush}">

                        <SplitView.Pane>
                            <StackPanel Grid.Row="0"
                                        Grid.Column="0"
                                        Margin="0, 5, 10, 0">

                                <customusercontrol:DropDownListViewControl DropdownTitle="My Projects"
                                                                           ListViewItemSource="{x:Bind projectListViewModel.Projects, Mode=TwoWay}"
                                                                           ListViewItemTemplate="{StaticResource ProjectListViewItemTemplate}"
                                                                           AllowAdditionToListView="True"
                                                                           Margin="0, 30, 0, 0"
                                                                           OnItemAddClick="AddProjectButton_ButtonClick"
                                                                           ListViewItemClicked="ProjectListView_ItemClick"
                                                                           MessageOnSourceEmpty="No Projects available"/>

                            </StackPanel>
                        </SplitView.Pane>

                        <SplitView.Content>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="2*" />
                                </Grid.ColumnDefinitions>
                                
                                <!--#region Task List Region Starts-->
                                
                                <Grid Name="TaskListView" 
                                      Grid.Row="0"
                                      Grid.Column="0"
                                      Style="{StaticResource TaskListViewByProjectStyle}"
                                      Visibility="{x:Bind taskListViewModel.CurrentProject, Mode=OneWay, Converter={StaticResource ObjectToVisibilityConverter}}">

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0"
                                                Orientation="Horizontal">
                                        <Button Name="OpenSplitViewButton" 
                                                Style="{StaticResource ButtonNoBackground}"
                                                Click="OpenSplitViewButton_Click"
                                                FontFamily="Segoe Fluent Icons"
                                                Content="&#xe8a0;"
                                                FontSize="17"/>
                                        <TextBlock Name="TaskListProjectTitle"
                                                   Text="{x:Bind taskListViewModel.CurrentProject.Name, Mode=OneWay}"
                                                   FontSize="15"
                                                   FontWeight="Bold"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <customusercontrol:CustomIconButtonControl Name="OpenAddTaskWindowButton"
                                                                               ButtonIcon="&#xE948;"
                                                                               ButtonContent="Add Task"
                                                                               ButtonStyle="{StaticResource ButtonNoBackground}"
                                                                               ButtonClick="OpenAddTaskWindowButton_ButtonClick"
                                                                               Margin="0, 20, 0, 0"
                                                                               ButtonBackground="Transparent"
                                                                               Grid.Row="1"
                                                                               Visibility="{x:Bind taskListViewModel.IsAddTaskContextTriggered, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverterInverse}}"
                                                                               IsButtonEnabled="True"/>

                                    <StackPanel x:Name="AddTaskDialogContent"
                                                Style="{StaticResource AddTaskDialogStyle}"
                                                Grid.Row="1"
                                                Visibility="{x:Bind taskListViewModel.IsAddTaskContextTriggered, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                        
                                        <TextBox Name="AddTaskDialogTaskName"
                                                 PlaceholderText="Task Name"
                                                 Style="{StaticResource TextBoxNoBg}"
                                                 FontWeight="Bold"
                                                 BorderBrush="Transparent"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 Margin="0, 0, 0, 15"
                                                 TextChanged="AddTaskDialogTaskName_TextChanged"/>

                                        <TextBox Name="AddTaskDialogDescription"
                                                 PlaceholderText="Description"
                                                 AcceptsReturn="True"
                                                 BorderBrush="Transparent"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 TextWrapping="Wrap"
                                                 Style="{StaticResource TextBoxNoBg}"
                                                 Margin="0, 0, 0, 15"/>

                                        <StackPanel Orientation="Horizontal">
                                            <ComboBox Name="AddTaskDialogPriority"
                                                      PlaceholderText="Priority"
                                                      CornerRadius="2"
                                                      Margin="0, 0, 10, 0"
                                                      ItemsSource="{x:Bind addTaskViewModel.PriorityData}"
                                                      ItemTemplate="{StaticResource ComboboxPriorityItemTemplate}"/>

                                            <ComboBox Name="AddTaskDialogStatus"
                                                      PlaceholderText="Status"
                                                      CornerRadius="2"
                                                      Margin="0, 0, 10, 0"
                                                      ItemsSource="{x:Bind addTaskViewModel.StatusData}"
                                                      ItemTemplate="{StaticResource ComboboxStatusItemTemplate}"/>
                                        </StackPanel>

                                        <Border BorderThickness="0, 0, 0, 0.5"
                                                BorderBrush="Gray"
                                                Padding="10, 0, 0, 10"
                                                Margin="0, 10, 0, 15"/>

                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Right">
                                            <Button Name="CloseTaskDialogButton"
                                                    Content="Cancel"
                                                    Click="CloseTaskDialogButton_Click"
                                                    Background="Transparent"
                                                    Margin="0, 0, 10, 0"
                                                    CornerRadius="5"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                                            <customusercontrol:CustomIconButtonControl x:Name="AddTaskFromDialogButton"
                                                                                       ButtonIcon="&#xE948;"
                                                                                       ButtonContent="Add Project"
                                                                                       ButtonClick="AddTaskFromDialogButton_ButtonClick"
                                                                                       ButtonBackground="{StaticResource SystemAccentColor}"
                                                                                       IsButtonEnabled="False"/>
                                        </StackPanel>


                                    </StackPanel>

                                    <ListView Name="TaskListViewByProject" 
                                              ItemsSource="{x:Bind taskListViewModel.Tasks, Mode=TwoWay}"
                                              ItemTemplate="{StaticResource TaskListViewDataTemplate}"
                                              Margin="0, 15, 0, 0"
                                              Grid.Row="2"
                                              IsItemClickEnabled="True"
                                              ItemClick="TaskListView_ItemClick"
                                              ItemContainerStyle="{StaticResource ListViewItemStyleAccent}" />
                                </Grid>

                                <!--#endregion-->
                                
                                <!--#region Select Project message starts-->
                                
                                <StackPanel Name="SelectProjectMessage"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="3"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="Select a Project to proceed further"
                                               Foreground="Gray"
                                               FontSize="30"/>
                                </StackPanel>
                                
                                <!--#endregion-->
                                
                                <!--#region Select Task Message starts-->

                                <StackPanel Name="SelectTaskMessage"
                                            Grid.Column="1"
                                            Grid.ColumnSpan="2"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Visibility="Collapsed">
                                    <TextBlock Text="Select a Task to proceed further"
                                               Foreground="Gray"
                                               FontSize="30"/>
                                </StackPanel>
                                
                                <!--#endregion-->

                                <!--#region Task Details view Starts-->
                                
                                <Grid Name="TaskDetailsView"
                                      Grid.Column="1"
                                      Grid.ColumnSpan="3"
                                      Style="{StaticResource TaskDetailsViewGridDisplay}"
                                      Visibility="{x:Bind taskDetailsViewModel.CurrTask, Mode=OneWay, Converter={StaticResource ObjectToVisibilityConverter}}">

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <StackPanel Orientation="Horizontal"
                                                Grid.Row="0">
                                        <ComboBox Name="Status"
                                                  PlaceholderText="Status"
                                                  CornerRadius="2"
                                                  Margin="0, 0, 10, 0"
                                                  ItemsSource="{x:Bind addTaskViewModel.StatusData}"
                                                  SelectedIndex="{x:Bind taskDetailsViewModel.CurrTask.Status, Mode=TwoWay, Converter={StaticResource LongToIntConverter}}"
                                                  ItemTemplate="{StaticResource ComboboxStatusItemTemplate}"/>

                                        <ComboBox Name="Priority"
                                                  PlaceholderText="Priority"
                                                  CornerRadius="2"
                                                  Margin="0, 0, 10, 0"
                                                  ItemsSource="{x:Bind addTaskViewModel.PriorityData}"
                                                  SelectedIndex="{x:Bind taskDetailsViewModel.CurrTask.Priority, Mode=TwoWay, Converter={StaticResource LongToIntConverter}}"
                                                  ItemTemplate="{StaticResource ComboboxPriorityItemTemplate}"/>
                                    </StackPanel>

                                    <CheckBox Grid.Row="1"
                                              Content="{x:Bind taskDetailsViewModel.CurrTask.Name, Mode=OneWay}"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              Margin="5, 15, 0, 0"/>

                                    <customusercontrol:IconedLabelControl Grid.Row="2"
                                                                          Icon="&#xE700;"
                                                                          ContentText="Description"
                                                                          Style="{StaticResource LabelStyles}"/>

                                    <TextBox Name="TaskDescription"
                                             Style="{StaticResource TextBoxNoBg}"
                                             Margin="15, 10, 15, 0"
                                             BorderBrush="Gray"
                                             Background="Transparent"
                                             BorderThickness="0.5"
                                             CornerRadius="5"
                                             AcceptsReturn="True"
                                             TextWrapping="Wrap"
                                             Padding="10"
                                             Grid.Row="3"
                                             Text="{x:Bind taskDetailsViewModel.CurrTask.Description, Mode=OneWay}"/>


                                    <Pivot x:Name="TaskViewPivot"
                                           Grid.Row="20"
                                           Grid.Column="0"
                                           Grid.ColumnSpan="2"
                                           Margin="5, 20, 5, 0">
                                        <PivotItem Name="SubtTaskPivotItem">
                                            <PivotItem.Header>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock FontFamily="Segoe Fluent Icons"
                                                               Text="&#xE73A;"
                                                               FontSize="12"
                                                               VerticalAlignment="Center"
                                                               FontWeight="Bold"/>

                                                    <TextBlock Text="Sub Tasks"
                                                               FontSize="12"
                                                               Margin="5, 0, 0, 0"
                                                               VerticalAlignment="Center"
                                                               FontWeight="Bold"/>
                                                </StackPanel>
                                            </PivotItem.Header>
                                            <StackPanel Orientation="Vertical">
                                                <customusercontrol:CustomIconButtonControl Name="OpenAddSubTaskWindowButton"
                                                                                           ButtonIcon="&#xE948;"
                                                                                           ButtonContent="Add Sub Task"
                                                                                           ButtonStyle="{StaticResource ButtonNoBackground}"
                                                                                           ButtonClick="OpenAddSubTaskWindowButton_ButtonClick"
                                                                                           Margin="0, 20, 0, 0"
                                                                                           ButtonBackground="Transparent"
                                                                                           Grid.Row="1"
                                                                                           Visibility="{x:Bind taskDetailsViewModel.IsAddSubTaskContextTriggered, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverterInverse}}"
                                                                                           IsButtonEnabled="True"/>

                                                <StackPanel x:Name="AddSubTaskDialogContent"
                                                            Style="{StaticResource AddTaskDialogStyle}"
                                                            Grid.Row="1"
                                                            Visibility="{x:Bind taskDetailsViewModel.IsAddSubTaskContextTriggered, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">

                                                    <TextBox Name="AddSubTaskDialogTaskName"
                                                             PlaceholderText="Task Name"
                                                             Style="{StaticResource TextBoxNoBg}"
                                                             FontWeight="Bold"
                                                             BorderBrush="Transparent"
                                                             Background="Transparent"
                                                             BorderThickness="0"
                                                             Margin="0, 0, 0, 15"
                                                             TextChanged="AddSubTaskDialogTaskName_TextChanged"/>

                                                    <TextBox Name="AddSubTaskDialogDescription"
                                                             PlaceholderText="Description"
                                                             BorderBrush="Transparent"
                                                             Background="Transparent"
                                                             BorderThickness="0"
                                                             AcceptsReturn="True"
                                                             TextWrapping="Wrap"
                                                             Style="{StaticResource TextBoxNoBg}"
                                                             Margin="0, 0, 0, 15"/>

                                                    <StackPanel Orientation="Horizontal">
                                                        <ComboBox Name="AddSubTaskDialogPriority"
                                                                  PlaceholderText="Priority"
                                                                  CornerRadius="2"
                                                                  Margin="0, 0, 10, 0"
                                                                  ItemsSource="{x:Bind addTaskViewModel.PriorityData}"
                                                                  ItemTemplate="{StaticResource ComboboxPriorityItemTemplate}"/>

                                                        <ComboBox Name="AddSubTaskDialogStatus"
                                                                  PlaceholderText="Status"
                                                                  CornerRadius="2"
                                                                  Margin="0, 0, 10, 0"
                                                                  ItemsSource="{x:Bind addTaskViewModel.StatusData}"
                                                                  ItemTemplate="{StaticResource ComboboxStatusItemTemplate}"/>
                                                    </StackPanel>

                                                    <Border BorderThickness="0, 0, 0, 0.5"
                                                            BorderBrush="Gray"
                                                            Padding="10, 0, 0, 10"
                                                            Margin="0, 10, 0, 15"/>

                                                    <StackPanel Orientation="Horizontal"
                                                                HorizontalAlignment="Right">
                                                        <Button Name="CloseSubTaskDialogButton"
                                                                Content="Cancel"
                                                                Click="CloseSubTaskDialogButton_Click"
                                                                Background="Transparent"
                                                                Margin="0, 0, 10, 0"
                                                                CornerRadius="5"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                                        <customusercontrol:CustomIconButtonControl x:Name="AddSubTaskFromDialogButton"
                                                                                                   ButtonIcon="&#xE948;"
                                                                                                   ButtonContent="Add Project"
                                                                                                   ButtonClick="AddSubTaskFromDialogButton_ButtonClick"
                                                                                                   ButtonBackground="{StaticResource SystemAccentColor}"
                                                                                                   IsButtonEnabled="False"/>
                                                    </StackPanel>
                                                </StackPanel>

                                                <ListView Name="SubTaskListView" 
                                                          ItemsSource="{x:Bind taskDetailsViewModel.CurrTask.SubTasks, Mode=TwoWay}"
                                                          ItemTemplate="{StaticResource SubTaskListViewDataTemplate}"
                                                          Margin="0, 20, 0, 0"
                                                          Grid.Row="2"
                                                          IsItemClickEnabled="False"
                                                          ItemContainerStyle="{StaticResource ListViewItemStyleDormant}" />
                                            </StackPanel>
                                        </PivotItem>
                                    </Pivot>
                                </Grid>
                                
                                <!--#endregion-->
                                
                            </Grid>
                        </SplitView.Content>
                    </SplitView>

                </Grid>
            </PivotItem>

        </Pivot>

        <!--#region Add Project Content Dialog Starts -->
        
        <ContentDialog x:Name="AddProjectDialog"
                       Style="{StaticResource ContentDialogStyle}">
            <StackPanel x:Name="AddProjectDialogContent"
                        Style="{StaticResource DialogContentStyle}">

                <Grid Margin="0, 0, 0, 25">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Add Project"
                               FontSize="25"
                               Grid.Column="0"/>
                    <Button Name="CloseProjectDialogButton"
                            FontFamily="Segoe MDL2 Assets"
                            Content="&#xE8BB;"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Click="CloseProjectDialogButton_Click"
                            Style="{StaticResource ButtonNoBackground}"
                            Grid.Column="1"/>
                </Grid>

                <TextBlock Text="Name" />
                <TextBox Name="AddProjectDialogProjectName"
                         PlaceholderText="Project Name"
                         Style="{StaticResource TextBoxCustom}"/>

                <TextBlock Text="Priority" />
                <ComboBox Name="AddProjectDialogPriority"
                          PlaceholderText="Priority"
                          Style="{StaticResource ComboBoxCustom}"
                          ItemsSource="{x:Bind addProjectViewModel.PriorityData}"
                          ItemTemplate="{StaticResource ComboboxPriorityItemTemplate}"/>

                <TextBlock Text="Status" />
                <ComboBox Name="AddProjectDialogStatus"
                          PlaceholderText="Status"
                          Style="{StaticResource ComboBoxCustom}"
                          ItemsSource="{x:Bind addProjectViewModel.StatusData}"
                          ItemTemplate="{StaticResource ComboboxStatusItemTemplate}"/>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <customusercontrol:CustomIconButtonControl Name="AddProjectFromDialogButton"
                                                               ButtonIcon="&#xE948;"
                                                               ButtonContent="Add Project"
                                                               ButtonClick="AddProjectFromDialogButton_ButtonClick"
                                                               ButtonBackground="{StaticResource SystemAccentColor}"
                                                               IsButtonEnabled="True"/>
                </StackPanel>


            </StackPanel>
        </ContentDialog>

        <!--#endregion-->

        <!--#region Add Teamspace Dialog starts-->
        
        <ContentDialog x:Name="AddTeamspaceDialog"
                       Style="{StaticResource ContentDialogStyle}"
                       Visibility="{Binding TeamspacesForCurrOrganization, Mode=OneWay, Converter={StaticResource CollectionToVisibilityConverterInverse}}">

            <ContentDialog.TitleTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="Add Teamspace"
                                   FontSize="25"/>
                    </StackPanel>
                </DataTemplate>
            </ContentDialog.TitleTemplate>

            <StackPanel x:Name="AddTeamspacesDialogContent"
                Style="{StaticResource DialogContentStyle}">

                <StackPanel>

                    <TextBlock Text="There seem to be no Teamspace present in the currently selected project, Kindly create a Teamspace to proceed further"
                               TextWrapping="Wrap"
                               Foreground="Gray"
                               Margin="0, 0, 0, 20"/>

                    <TextBlock Text="Name"
                               Grid.Column="0"/>
                    <TextBox Name="TeamspaceName"
                             PlaceholderText="Teamspace Name"
                             Style="{StaticResource TextBoxCustom}"/>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <customusercontrol:CustomIconButtonControl Name="AddTeamspaceButton"
                                                                   ButtonIcon="&#xE948;"
                                                                   ButtonContent="Add Teamspace"
                                                                   ButtonClick="AddTeamspace_ButtonClick"
                                                                   ButtonBackground="{StaticResource SystemAccentColor}"
                                                                   IsButtonEnabled="True"/>
                    </StackPanel>
                </StackPanel>

            </StackPanel>
        </ContentDialog>

        <!--#endregion-->
        
    </Grid>
</Page>
