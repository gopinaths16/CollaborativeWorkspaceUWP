<Page
    x:Class="CollaborativeWorkspaceUWP.Views.TaskView"
    Name="UserTaskView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:template="using:CollaborativeWorkspaceUWP.Templates"
    xmlns:local="using:CollaborativeWorkspaceUWP.Views"
    xmlns:models="using:CollaborativeWorkspaceUWP.Models"
    xmlns:viewmodels="using:CollaborativeWorkspaceUWP.ViewModels"
    xmlns:customusercontrol="using:CollaborativeWorkspaceUWP.CustomControls.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <viewmodels:TaskViewModel />
    </Page.DataContext>
    
    <Page.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <template:TableDataTemplate />

                <ResourceDictionary>

                    <Style TargetType="PivotItem" x:Name="TaskTabItem">
                        <Setter Property="FontSize" Value="2" />
                    </Style>

                    <Style TargetType="StackPanel" x:Name="PivotRightHeader">
                        <Setter Property="Margin" Value="0, 10, 20, 0" />
                    </Style>

                    <Style TargetType="Grid" x:Name="ProjectTaskView">
                        <Setter Property="Margin" Value="0, 20, 0, 0" />
                    </Style>

                    <Style TargetType="ContentDialog" x:Name="AddProjectDialogStyle">
                        <Setter Property="CornerRadius" Value="5" />
                    </Style>

                    <Style TargetType="TextBox" x:Name="TextBoxCustom">
                        <Setter Property="CornerRadius" Value="2" />
                        <Setter Property="Margin" Value="0, 5, 0, 20" />
                    </Style>

                    <Style TargetType="ComboBox" x:Name="ComboBoxCustom">
                        <Setter Property="CornerRadius" Value="2" />
                        <Setter Property="Margin" Value="0, 5, 0, 0" />
                    </Style>

                    <Style TargetType="StackPanel" x:Name="AddProjectDialogContentStyle">
                        <Setter Property="Margin" Value="0, 10, 0, 0" />
                    </Style>

                    <DataTemplate x:Key="ProjectListViewItemTemplate" 
                                  x:DataType="models:Project">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Name}"
                                       Grid.Column="0"
                                       TextWrapping="Wrap"
                                       TextTrimming="WordEllipsis"
                                       MaxLines="1"/>

                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Right"
                                        Grid.Column="1">
                            </StackPanel>

                        </Grid>
                    </DataTemplate>

                    <DataTemplate x:Key="ComboboxItemTemplate"
                                  x:DataType="models:PriorityData">
                        <TextBlock Text="{Binding Priority}" />
                    </DataTemplate>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Page.Resources>

    <Grid Name="TaskViewPanel">

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Pivot x:Name="TaskTabView"
               Title="Task View"
               Visibility="Visible"
               Grid.Row="0">


            <Pivot.RightHeader>
                <StackPanel Style="{StaticResource PivotRightHeader}">
                </StackPanel>
            </Pivot.RightHeader>

            <PivotItem Header="By Projects">
                <Grid Name="ProjectTaskViewGrid"
                      Style="{StaticResource ProjectTaskView}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*" />
                        <ColumnDefinition Width="0.5*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>

                    <SplitView Name="ProjectListSplitView"
                               IsPaneOpen="{x:Bind projectListViewModel.IsProjectListPaneOpen}"
                               DisplayMode="Inline">
                        
                        <SplitView.Pane>
                            <StackPanel Grid.Row="0"
                                        Grid.Column="0"
                                        Orientation="Vertical"
                                        Margin="20, 20, 20, 0">

                                <customusercontrol:DropDownListViewControl DropdownTitle="My Projects"
                                                                           ListViewItemSource="{x:Bind projectListViewModel.Projects, Mode=TwoWay}"
                                                                           ListViewItemTemplate="{StaticResource ProjectListViewItemTemplate}"
                                                                           AllowAdditionToListView="True"
                                                                           OnItemAddClick="AddProjectButton_ButtonClick"
                                                                           Margin="0, 20, 0, 0"
                                                                           ListViewItemClicked="ProjectListView_ItemClick"/>

                            </StackPanel>
                        </SplitView.Pane>
                        
                    </SplitView>

                    <StackPanel Name="TaskListView" 
                                Grid.Row="0"
                                Grid.Column="1"
                                Orientation="Vertical"
                                Margin="20, 20, 0, 0"
                                Visibility="Collapsed">
                        <Grid BorderBrush="{StaticResource SystemAccentColor}"
                              BorderThickness="2"
                              Padding="20"
                              CornerRadius="5">
                            
                            <Grid.RowDefinitions >
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="TaskName"
                                     PlaceholderText="Task Name"
                                     Background="Transparent"
                                     SelectionHighlightColor="Transparent"
                                     BorderThickness="0, 0, 0, 1"
                                     Grid.Row="0"
                                     Grid.Column="0"
                                     Grid.ColumnSpan="3"/>

                            <StackPanel Margin="0, 20, 0, 0" 
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="3"
                                        Orientation="Horizontal">
                                <ComboBox Name="TaskStatus"
                                          PlaceholderText="Status"
                                          CornerRadius="2">
                                    <x:String>Planning</x:String>
                                    <x:String>InProgress</x:String>
                                    <x:String>Completed</x:String>
                                </ComboBox>
                                <ComboBox Name="TaskPriority"
                                          Margin="10, 0, 0, 0"
                                          PlaceholderText="Priority"
                                          CornerRadius="2">
                                    <x:String>Low</x:String>
                                    <x:String>Medium</x:String>
                                    <x:String>High</x:String>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Row="2"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="3"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Right"
                                        Margin="0, 20, 0, 0">
                                <customusercontrol:CustomIconButtonControl Name="AddTaskButton" 
                                                                           ButtonIcon="&#xED0E;"
                                                                           ButtonContent="Add Task"
                                                                           ButtonClick="AddTaskButton_Click"/>
                            </StackPanel>
                        </Grid>

                        <ListView Name="TaskListViewByProject" 
                                  ItemsSource="{x:Bind taskListViewModel.Tasks, Mode=TwoWay}"
                                  Margin="0, 20, 0, 0"
                                  IsItemClickEnabled="True"
                                  ItemClick="TaskListView_ItemClick">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="models:UserTask">
                                    <Grid Padding="10"
                                          BorderBrush="{StaticResource SystemAccentColor}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Name}"
                                                   Grid.Column="0"
                                                   TextWrapping="Wrap"
                                                   TextTrimming="WordEllipsis"
                                                   MaxLines="1"/>

                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Right"
                                                    Grid.Column="1">
                                        </StackPanel>

                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>

                    <StackPanel Name="SelectProjectMessage"
                                Grid.Column="1"
                                Grid.ColumnSpan="2"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <TextBlock Text="Select a Project to proceed further"
                                   Foreground="Gray"
                                   FontSize="30"/>
                    </StackPanel>

                    <StackPanel Name="SelectTaskMessage"
                                Grid.Column="2"
                                Grid.ColumnSpan="2"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Visibility="Collapsed">
                        <TextBlock Text="Select a Task to proceed further"
                                   Foreground="Gray"
                                   FontSize="30"/>
                    </StackPanel>

                    <StackPanel Name="TaskDetailsView"
                                Orientation="Vertical"
                                Padding="20"
                                Visibility="Collapsed"
                                Grid.Column="2">
                        <TextBlock Text="{x:Bind taskDetailsViewModel.CurrTask.Name, Mode=TwoWay}"
                                   FontSize="20"/>
                    </StackPanel>

                </Grid>
            </PivotItem>

            <PivotItem Header="Table View"
                       Style="{StaticResource TaskTabItem}">
                <Grid x:Name="Table"
                      Style="{StaticResource TableViewTable}">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <ItemsControl ItemsSource="{Binding Tasks}"
                                  ItemTemplate="{StaticResource TaskViewTableTemplate}"
                                  Grid.Row="1">
                    </ItemsControl>

                </Grid>
            </PivotItem>

            <PivotItem Header="Heirarchy View"
                       Style="{StaticResource TaskTabItem}">

            </PivotItem>
        </Pivot>

        <ContentDialog x:Name="AddProjectDialog"
                       Style="{StaticResource AddProjectDialogStyle}">
            <ContentDialog.TitleTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Add Project" 
                                   Grid.Column="0"/>
                    </Grid>
                </DataTemplate>
            </ContentDialog.TitleTemplate>
            <Grid>
                <StackPanel x:Name="AddProjectDialogContent"
                            Style="{StaticResource AddProjectDialogContentStyle}">

                    <TextBlock Text="Name" />
                    <TextBox Name="AddProjectDialogProjectName"
                             PlaceholderText="Project Name"
                             Style="{StaticResource TextBoxCustom}"
                             Text="{x:Bind addProjectViewModel.Project.Name, Mode=TwoWay}"/>

                    <TextBlock Text="Priority" />
                    <ComboBox Name="AddProjectDialogPriority"
                             PlaceholderText="Priority"
                             Style="{StaticResource ComboBoxCustom}"
                             ItemsSource="{x:Bind addProjectViewModel.PriorityData}"
                             ItemTemplate="{StaticResource ComboboxItemTemplate}"/>

                </StackPanel>
            </Grid>
        </ContentDialog>

    </Grid>
</Page>
