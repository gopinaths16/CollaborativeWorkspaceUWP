<Page
    x:Class="CollaborativeWorkspaceUWP.Views.TaskView"
    Name="UserTaskView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:template="using:CollaborativeWorkspaceUWP.Templates"
    xmlns:local="using:CollaborativeWorkspaceUWP.Views"
    xmlns:models="using:CollaborativeWorkspaceUWP.Models"
    xmlns:viewmodels="using:CollaborativeWorkspaceUWP.ViewModels"
    xmlns:customusercontrol="using:CollaborativeWorkspaceUWP.CustomControls.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <viewmodels:TaskViewModel />
    </Page.DataContext>
    
    <Page.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <template:TableDataTemplate />

                <ResourceDictionary>
                    <Style TargetType="Pivot" x:Name="TaskTab">
                        <Setter Property="Margin" Value="0, 20, 0, 0"/>
                        <Setter Property="FontSize" Value="10" />
                    </Style>

                    <Style TargetType="PivotItem" x:Name="TaskTabItem">
                        <Setter Property="FontSize" Value="10" />
                    </Style>

                    <Style TargetType="StackPanel" x:Name="PivotRightHeader">
                        <Setter Property="Margin" Value="0, 10, 20, 0" />
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Page.Resources>

    <Grid 
                Name="TaskViewPanel">

        <TextBlock Name="Title" 
                   Style="{StaticResource TaskViewTitle}" 
                   RelativePanel.AlignTopWithPanel="True" 
                   RelativePanel.AlignLeftWithPanel="True"
                   Grid.Row="0"
                   Visibility="Collapsed"/>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ListView ItemsSource="{Binding Tasks}"
                      Grid.Row="0"
                      Grid.Column="0"
                      ScrollViewer.VerticalScrollMode="Enabled"
                      IsItemClickEnabled="True"
                      ItemClick="ListView_ItemClick"
                      BorderBrush="{StaticResource SystemAccentColor}"
                      CornerRadius="5">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:UserTask">
                        <StackPanel Orientation="Vertical"
                                    Margin="10">
                            <TextBlock Text="{Binding Name}" FontSize="30" Padding="5" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Priority:" Padding="5" />
                                <TextBlock Text="{Binding Priority}" Padding="5" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Status:" Padding="5" />
                                <TextBlock Text="{Binding Status}" Padding="5" />
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <StackPanel Grid.Row="0"
                        Grid.Column="1"
                        Margin="20, 0, 0, 0"
                        BorderBrush="{StaticResource SystemAccentColor}"
                        CornerRadius="5">
                <TextBlock Text="{Binding CurrentTask.Name}" Padding="10" FontSize="50"/>
                <TextBlock Text="{Binding CurrentTask.Description}" Padding="10" FontSize="20"/>
            </StackPanel>

            <StackPanel Grid.Row="0"
                        Grid.Column="2"
                        Margin="20"
                        Orientation="Horizontal"
                        BorderBrush="{StaticResource SystemAccentColor}"
                        CornerRadius="5">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Name:" Padding="5" />
                    <TextBlock Text="Status:" Padding="5" />
                    <TextBlock Text="Priority:" Padding="5" />
                    <TextBlock Text="Description:" Padding="5" />
                </StackPanel>
                <StackPanel Orientation="Vertical"
                            Width="200">
                    <TextBox Name="TaskName" Padding="5" />
                    <TextBox Name="TaskStatus" Padding="5" />
                    <TextBox Name="TaskDescription" Padding="5" />
                    <TextBox Name="TaskPriority" Padding="5" />
                    <Button Name="AddTaskButton" Click="AddTaskButton_Click" Content="Add new Task" />
                </StackPanel>
            </StackPanel>

        </Grid>
        <Pivot x:Name="TaskTabView"
               Style="{StaticResource TaskTab}"
               Visibility="Collapsed">
            
            <Pivot.RightHeader>
                <StackPanel Style="{StaticResource PivotRightHeader}">
                    <customusercontrol:CustomIconButtonControl ButtonIcon="&#xED0E;"
                                                               ButtonContent="New Task"
                                                               ButtonClick="CustomIconButtonControl_ButtonClick"/>
                </StackPanel>
            </Pivot.RightHeader>
            
            <PivotItem Header="Table View"
                       Style="{StaticResource TaskTabItem}">
                <Grid x:Name="Table"
                      Style="{StaticResource TableViewTable}">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <ItemsControl ItemsSource="{Binding Tasks}"
                                  ItemTemplate="{StaticResource TaskViewTableTemplate}"
                                  Grid.Row="1">
                    </ItemsControl>

                </Grid>
            </PivotItem>
            <PivotItem Header="Heirarchy View"
                       Style="{StaticResource TaskTabItem}">

            </PivotItem>
        </Pivot>

        


    </Grid>
</Page>
