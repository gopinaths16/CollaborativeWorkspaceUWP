<Page
    x:Class="CollaborativeWorkspaceUWP.Views.TaskView"
    Name="UserTaskView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:template="using:CollaborativeWorkspaceUWP.Templates"
    xmlns:local="using:CollaborativeWorkspaceUWP.Views"
    xmlns:models="using:CollaborativeWorkspaceUWP.Models"
    xmlns:viewmodels="using:CollaborativeWorkspaceUWP.ViewModels"
    xmlns:customusercontrol="using:CollaborativeWorkspaceUWP.CustomControls.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource MainBackgroundAcrylicBrush}">
    
    <Page.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>

                    <Style TargetType="PivotItem" x:Name="TaskTabItem">
                        <Setter Property="FontSize" Value="2" />
                    </Style>

                    <Style TargetType="StackPanel" x:Name="PivotRightHeader">
                        <Setter Property="Margin" Value="0, 10, 20, 0" />
                    </Style>

                    <Style TargetType="Grid" x:Name="ProjectTaskView">
                        <Setter Property="Margin" Value="0, 20, 0, 0" />
                    </Style>

                    <Style TargetType="ContentDialog" x:Name="ContentDialogStyle">
                        <Setter Property="CornerRadius" Value="5" />
                        <Setter Property="Background" Value="{StaticResource SecondaryAcrylicBrush}" />
                    </Style>

                    <Style TargetType="TextBox" x:Name="TextBoxCustom">
                        <Setter Property="CornerRadius" Value="2" />
                        <Setter Property="Margin" Value="0, 5, 0, 20" />
                    </Style>

                    <Style TargetType="ComboBox" x:Name="ComboBoxCustom">
                        <Setter Property="CornerRadius" Value="2" />
                        <Setter Property="Margin" Value="0, 5, 0, 20" />
                    </Style>

                    <Style TargetType="StackPanel" x:Name="DialogContentStyle">
                        <Setter Property="Margin" Value="0, 10, 0, 0" />
                    </Style>

                    <Style TargetType="TextBlock" x:Name="TaskListProjectTitleStyle">
                        <Setter Property="Margin" Value="10, 0, 0, 0" />
                        <Setter Property="FontSize" Value="30" />
                    </Style>

                    <Style TargetType="TextBlock" x:Name="TaskListProjectTitleIconStyle">
                        <Setter Property="FontSize" Value="30" />
                        <Setter Property="Margin" Value="0, 5, 0, 0" />
                    </Style>

                    <Style TargetType="TextBlock" x:Name="TaskDetailsViewTitleStyle">
                        <Setter Property="FontSize" Value="50" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="HorizontalAlignment" Value="Center" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                    </Style>

                    <Style TargetType="Grid" x:Name="TaskDetailsViewGridDisplay">
                        <Setter Property="BorderThickness" Value="0.5" />
                        <Setter Property="CornerRadius" Value="5" />
                        <Setter Property="Background" Value="{StaticResource SecondaryAcrylicBrush}" />
                        <Setter Property="Margin" Value="20, 0, 0, 10" />
                        <Setter Property="Padding" Value="10" />
                    </Style>

                    <Style TargetType="customusercontrol:IconedLabelControl" x:Key="LabelStyles" >
                        <Setter Property="Margin" Value="10, 20, 0, 0" />
                        <Setter Property="VerticalAlignment" Value="Top" />
                    </Style>

                    <DataTemplate x:Key="ProjectListViewItemTemplate" 
                                  x:DataType="models:Project">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       Text="&#xE70B;"
                                       Margin="0, 4, 10, 0"
                                       Grid.Column="0"/>

                            <TextBlock Text="{Binding Name}"
                                       Grid.Column="1"
                                       TextWrapping="Wrap"
                                       TextTrimming="WordEllipsis"
                                       MaxLines="1"/>

                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Right"
                                        Grid.Column="2">
                            </StackPanel>

                        </Grid>
                    </DataTemplate>

                    <DataTemplate x:Key="TaskListViewDataTemplate"
                                  x:DataType="models:UserTask">
                        <Grid Padding="10"
                              Background="{StaticResource AccentAcrylicBrush}"
                              Margin="0, 10, 0, 0"
                              CornerRadius="5"
                              BorderThickness="2"
                              HorizontalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal"
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2">
                                <StackPanel Padding="10, 2, 10, 2"
                                            Background="Gray"
                                            CornerRadius="5">
                                    <TextBlock Text="{Binding Id}" />
                                </StackPanel>
                                <StackPanel Padding="5, 2, 5, 2"
                                            Background="red"
                                            CornerRadius="5"
                                            Margin="5, 0, 0, 0">
                                    <TextBlock Text="{Binding PriorityData.Name}" />
                                </StackPanel>
                                <StackPanel Padding="5, 2, 5, 2"
                                            Background="red"
                                            CornerRadius="5"
                                            Margin="5, 0, 0, 0">
                                    <TextBlock Text="{Binding StatusData.Name}" />
                                </StackPanel>
                            </StackPanel>
                            
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       Text="&#xE73A;"
                                       Margin="0, 10, 10, 0"
                                       Grid.Row="1"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       Grid.Column="0"/>
                            <TextBlock Text="{Binding Name}"
                                       Grid.Row="1"
                                       Grid.Column="1"
                                       Padding="0, 8, 0, 0"
                                       VerticalAlignment="Top"
                                       TextWrapping="Wrap"
                                       TextTrimming="WordEllipsis"
                                       MaxLines="1"/>

                        </Grid>
                    </DataTemplate>

                    <DataTemplate x:Key="SubTaskListViewDataTemplate"
                                  x:DataType="models:UserTask">
                        <Grid Padding="10"
                              CornerRadius="5"
                              BorderThickness="2"
                              HorizontalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Row="0"
                                  Grid.Column="0"
                                  Grid.ColumnSpan="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Padding="10, 5, 10, 5"
                                            Margin="5, 0, 0, 0"
                                            Background="Gray"
                                            CornerRadius="5"
                                            Grid.Column="0"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Id}" />
                                </StackPanel>
                                <TextBlock FontFamily="Segoe MDL2 Assets"
                                           Text="&#xE73A;"
                                           Margin="10, 0, 10, 0"
                                           Grid.Column="1"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Name}"
                                           Grid.Row="1"
                                           Grid.Column="2"
                                           VerticalAlignment="Center"
                                           TextWrapping="Wrap"
                                           TextTrimming="WordEllipsis"
                                           MaxLines="1"/>
                                <StackPanel Padding="5"
                                            Background="red"
                                            VerticalAlignment="Center"
                                            CornerRadius="5"
                                            Margin="5, 0, 0, 0"
                                            Grid.Column="3">
                                    <TextBlock Text="{Binding PriorityData.Name}" />
                                </StackPanel>
                                <StackPanel Padding="5"
                                            Background="red"
                                            CornerRadius="5"
                                            Margin="5, 0, 0, 0"
                                            Grid.Column="4"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="{Binding StatusData.Name}" />
                                </StackPanel>

                                <customusercontrol:CustomIconButtonControl Name="OpenSubTaskButton"
                                                                           ButtonIcon="&#xED25;"
                                                                           ButtonContent="Open"
                                                                           ButtonClick="OpenSubTaskButton_ButtonClick"
                                                                           Margin="10, 0, 0, 0"
                                                                           ButtonBackground="Transparent"
                                                                           Grid.Column="5"/>
                            </Grid>

                        </Grid>
                    </DataTemplate>

                    <DataTemplate x:Key="ComboboxPriorityItemTemplate"
                                  x:DataType="models:Priority">
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>

                    <DataTemplate x:Key="ComboboxStatusItemTemplate"
                                  x:DataType="models:Status">
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                    
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Page.Resources>

    <Grid Name="TaskViewPanel"
          Background="{StaticResource MainBackgroundAcrylicBrush}">

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Pivot x:Name="TaskTabView"
               Grid.Row="0">


            <Pivot.RightHeader>
                <StackPanel Style="{StaticResource PivotRightHeader}">
                </StackPanel>
            </Pivot.RightHeader>

            <PivotItem Header="By Projects">
                <Grid Name="ProjectTaskViewGrid"
                      Style="{StaticResource ProjectTaskView}">
                    

                    <SplitView Name="ProjectListSplitView"
                               IsPaneOpen="{x:Bind projectListViewModel.IsProjectListPaneOpen, Mode=OneWay}"
                               DisplayMode="Inline"
                               PaneBackground="{StaticResource MainBackgroundAcrylicBrush}">

                        <SplitView.Pane>
                            <ScrollViewer Grid.Row="0"
                                          Grid.Column="0"
                                          Margin="0, 20, 20, 0"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Disabled">

                                <customusercontrol:DropDownListViewControl DropdownTitle="My Projects"
                                                                           ListViewItemSource="{x:Bind projectListViewModel.Projects, Mode=TwoWay}"
                                                                           ListViewItemTemplate="{StaticResource ProjectListViewItemTemplate}"
                                                                           AllowAdditionToListView="True"
                                                                           OnItemAddClick="AddProjectButton_ButtonClick"
                                                                           ListViewItemClicked="ProjectListView_ItemClick"/>

                            </ScrollViewer>
                        </SplitView.Pane>

                        <SplitView.Content>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="2*" />
                                </Grid.ColumnDefinitions>
                                
                                <Grid Name="TaskListView" 
                                      Grid.Row="0"
                                      Grid.Column="0"
                                      Margin="20, 20, 0, 0"
                                      Visibility="Collapsed"
                                      Width="300">

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0"
                                                Orientation="Horizontal">
                                        <Button Name="OpenSplitViewButton" 
                                                Style="{StaticResource ButtonNoBackground}"
                                                Margin="5, 0, 10, 0"
                                                Click="OpenSplitViewButton_Click"
                                                FontFamily="Segoe MDL2 Assets"
                                                Content="&#xE8A0;"
                                                FontSize="20"/>
                                        <TextBlock Name="TaskListProjectTitleIcon"
                                                   FontFamily="Segoe MDL2 Assets"
                                                   Text="&#xE70B;"
                                                   Style="{StaticResource TaskListProjectTitleIconStyle}"/>
                                        <TextBlock Name="TaskListProjectTitle"
                                                   Text="{x:Bind taskListViewModel.CurrentProject.Name, Mode=OneWay}"
                                                   Style="{StaticResource TaskListProjectTitleStyle}"/>
                                    </StackPanel>

                                    <customusercontrol:CustomIconButtonControl Name="OpenAddTaskWindowButton"
                                                                               ButtonIcon="&#xE948;"
                                                                               ButtonContent="Add Task"
                                                                               ButtonStyle="{StaticResource ButtonNoBackground}"
                                                                               ButtonClick="OpenAddTaskWindowButton_ButtonClick"
                                                                               Margin="0, 20, 0, 0"
                                                                               ButtonBackground="Transparent"
                                                                               Grid.Row="1"/>

                                    <ListView Name="TaskListViewByProject" 
                                              ItemsSource="{x:Bind taskListViewModel.Tasks, Mode=TwoWay}"
                                              ItemTemplate="{StaticResource TaskListViewDataTemplate}"
                                              Margin="0, 20, 0, 0"
                                              Grid.Row="2"
                                              IsItemClickEnabled="True"
                                              ItemClick="TaskListView_ItemClick"
                                              ItemContainerStyle="{StaticResource ListViewItemStyle}" />
                                </Grid>

                                <StackPanel Name="SelectProjectMessage"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="3"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="Select a Project to proceed further"
                                               Foreground="Gray"
                                               FontSize="30"/>
                                </StackPanel>

                                <StackPanel Name="SelectTaskMessage"
                                            Grid.Column="1"
                                            Grid.ColumnSpan="2"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Visibility="Collapsed">
                                    <TextBlock Text="Select a Task to proceed further"
                                               Foreground="Gray"
                                               FontSize="30"/>
                                </StackPanel>

                                <Grid Name="TaskDetailsView"
                                      Padding="20"
                                      Visibility="Collapsed"
                                      Grid.Column="1"
                                      Grid.ColumnSpan="3"
                                      Style="{StaticResource TaskDetailsViewGridDisplay}">

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Orientation="Horizontal"
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Grid.ColumnSpan="2">
                                        <TextBlock Text="&#xE73A;"
                                                   FontFamily="Segoe MDL2 Assets"
                                                   Margin="10, 0, 20, 0"
                                                   FontSize="40"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Text="{x:Bind taskDetailsViewModel.CurrTask.Name, Mode=TwoWay}"
                                                   Style="{StaticResource TaskDetailsViewTitleStyle}" />
                                    </StackPanel>

                                    <customusercontrol:IconedLabelControl Grid.Row="1"
                                                                          Grid.Column="0"
                                                                          Icon="&#xE700;"
                                                                          ContentText="Description"
                                                                          Style="{StaticResource LabelStyles}"/>

                                    <TextBlock x:Name="TaskDescription"
                                               Text="{x:Bind taskDetailsViewModel.CurrTask.Description, Mode=OneWay}"
                                               Grid.Row="1"
                                               Grid.Column="1"
                                               Margin="0, 20, 0, 0"
                                               TextWrapping="Wrap"/>

                                    <customusercontrol:IconedLabelControl Grid.Row="2"
                                                                          Grid.Column="0"
                                                                          Icon="&#xF13C;"
                                                                          ContentText="Priority"
                                                                          Style="{StaticResource LabelStyles}"/>

                                    <TextBlock x:Name="TaskPriority"
                                               Text="{x:Bind taskDetailsViewModel.CurrTask.PriorityData.Name, Mode=OneWay}"
                                               Grid.Row="2"
                                               Grid.Column="1"
                                               Margin="0, 20, 0, 0"
                                               TextWrapping="Wrap"/>

                                    <customusercontrol:IconedLabelControl Grid.Row="3"
                                                                          Grid.Column="0"
                                                                          Icon="&#xF143;"
                                                                          ContentText="Status"
                                                                          Style="{StaticResource LabelStyles}"/>

                                    <TextBlock x:Name="TaskStatus"
                                               Text="{x:Bind taskDetailsViewModel.CurrTask.StatusData.Name, Mode=OneWay}"
                                               Grid.Row="3"
                                               Grid.Column="1"
                                               Margin="0, 20, 0, 0"
                                               TextWrapping="Wrap"/>

                                    <Pivot x:Name="TaskViewPivot"
                                           Grid.Row="20"
                                           Grid.Column="0"
                                           Grid.ColumnSpan="2"
                                           Margin="5, 20, 5, 0">
                                        <PivotItem Name="SubtTaskPivotItem"
                                                   Header="Sub Tasks">
                                            <StackPanel Orientation="Vertical">
                                                <customusercontrol:CustomIconButtonControl Name="OpenAddSubTaskWindowButton"
                                                                                           ButtonIcon="&#xE948;"
                                                                                           ButtonContent="Add Sub Task"
                                                                                           ButtonStyle="{StaticResource ButtonNoBackground}"
                                                                                           ButtonClick="OpenAddSubTaskWindowButton_ButtonClick"
                                                                                           Margin="0, 20, 0, 0"
                                                                                           ButtonBackground="Transparent"
                                                                                           Grid.Row="1"/>

                                                <ListView Name="SubTaskListView" 
                                                          ItemsSource="{x:Bind taskDetailsViewModel.CurrTask.SubTasks, Mode=TwoWay}"
                                                          ItemTemplate="{StaticResource SubTaskListViewDataTemplate}"
                                                          Margin="0, 20, 0, 0"
                                                          Grid.Row="2"
                                                          IsItemClickEnabled="False"
                                                          ItemContainerStyle="{StaticResource ListViewItemStyle}" />
                                            </StackPanel>
                                        </PivotItem>
                                    </Pivot>
                                </Grid>
                            </Grid>
                        </SplitView.Content>
                    </SplitView>

                </Grid>
            </PivotItem>

        </Pivot>

        <!--#region Add Project Content Dialog Starts -->
        
        <ContentDialog x:Name="AddProjectDialog"
                       Style="{StaticResource ContentDialogStyle}">
            <StackPanel x:Name="AddProjectDialogContent"
                        Style="{StaticResource DialogContentStyle}">

                <Grid Margin="0, 0, 0, 25">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Add Project"
                               FontSize="25"
                               Grid.Column="0"/>
                    <Button Name="CloseProjectDialogButton"
                            FontFamily="Segoe MDL2 Assets"
                            Content="&#xE8BB;"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Click="CloseProjectDialogButton_Click"
                            Style="{StaticResource ButtonNoBackground}"
                            Grid.Column="1"/>
                </Grid>

                <TextBlock Text="Name" />
                <TextBox Name="AddProjectDialogProjectName"
                         PlaceholderText="Project Name"
                         Style="{StaticResource TextBoxCustom}"/>

                <TextBlock Text="Priority" />
                <ComboBox Name="AddProjectDialogPriority"
                          PlaceholderText="Priority"
                          Style="{StaticResource ComboBoxCustom}"
                          ItemsSource="{x:Bind addProjectViewModel.PriorityData}"
                          ItemTemplate="{StaticResource ComboboxPriorityItemTemplate}"/>

                <TextBlock Text="Status" />
                <ComboBox Name="AddProjectDialogStatus"
                          PlaceholderText="Status"
                          Style="{StaticResource ComboBoxCustom}"
                          ItemsSource="{x:Bind addProjectViewModel.StatusData}"
                          ItemTemplate="{StaticResource ComboboxStatusItemTemplate}"/>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <customusercontrol:CustomIconButtonControl Name="AddProjectFromDialogButton"
                                                               ButtonIcon="&#xE948;"
                                                               ButtonContent="Add Project"
                                                               ButtonClick="AddProjectFromDialogButton_ButtonClick"
                                                               ButtonBackground="{StaticResource SystemAccentColor}"/>
                </StackPanel>


            </StackPanel>
        </ContentDialog>

        <!--#endregion-->
        
        <!--#region Add Task Dialog Starts-->
        
        <ContentDialog x:Name="AddTaskDialog"
                       Style="{StaticResource ContentDialogStyle}">

            <StackPanel x:Name="AddPTaskDialogContent"
                        Style="{StaticResource DialogContentStyle}">

                <Grid Margin="0, 0, 0, 25">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Add Task"
                               FontSize="25"
                               Grid.Column="0"/>
                    <Button Name="CloseTaskDialogButton"
                            FontFamily="Segoe MDL2 Assets"
                            Content="&#xE8BB;"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Click="CloseTaskDialogButton_Click"
                            Style="{StaticResource ButtonNoBackground}"
                            Grid.Column="1"/>
                </Grid>

                <TextBlock Text="Name" />
                <TextBox Name="AddTaskDialogTaskName"
                         PlaceholderText="Task Name"
                         Style="{StaticResource TextBoxCustom}"/>

                <TextBlock Text="Name" />
                <TextBox Name="AddTaskDialogDescription"
                         PlaceholderText="Description"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         Style="{StaticResource TextBoxCustom}"/>

                <TextBlock Text="Priority" />
                <ComboBox Name="AddTaskDialogPriority"
                          PlaceholderText="Priority"
                          Style="{StaticResource ComboBoxCustom}"
                          ItemsSource="{x:Bind addTaskViewModel.PriorityData}"
                          ItemTemplate="{StaticResource ComboboxPriorityItemTemplate}"/>

                <TextBlock Text="Status" />
                <ComboBox Name="AddTaskDialogStatus"
                          PlaceholderText="Status"
                          Style="{StaticResource ComboBoxCustom}"
                          ItemsSource="{x:Bind addTaskViewModel.StatusData}"
                          ItemTemplate="{StaticResource ComboboxStatusItemTemplate}"/>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <customusercontrol:CustomIconButtonControl Name="AddTaskFromDialogButton"
                                                               ButtonIcon="&#xE948;"
                                                               ButtonContent="Add Project"
                                                               ButtonClick="AddTaskFromDialogButton_ButtonClick"
                                                               ButtonBackground="{StaticResource SystemAccentColor}"/>
                </StackPanel>


            </StackPanel>

        </ContentDialog>

        <!--#endregion-->
        
        <!--#region Add Sub Task Dialog Starts-->

        <ContentDialog x:Name="AddSubTaskDialog"
               Style="{StaticResource ContentDialogStyle}">

            <StackPanel x:Name="AddSubTaskDialogContent"
                Style="{StaticResource DialogContentStyle}">

                <Grid Margin="0, 0, 0, 25">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Add Sub Task"
                       FontSize="25"
                       Grid.Column="0"/>
                    <Button Name="CloseSubTaskDialog"
                            FontFamily="Segoe MDL2 Assets"
                            Content="&#xE8BB;"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Click="CloseSubTaskDialog_Click"
                            Style="{StaticResource ButtonNoBackground}"
                            Grid.Column="1"/>


                </Grid>

                <ListView Name="SubTaskListViewByProject" 
                          ItemsSource="{x:Bind addSubTaskViewModel.Tasks, Mode=TwoWay}"
                          ItemTemplate="{StaticResource TaskListViewDataTemplate}"
                          Margin="0, 20, 0, 0"
                          Grid.Row="2"
                          IsItemClickEnabled="True"
                          ItemClick="SubTaskListViewByProject_ItemClick"
                          ItemContainerStyle="{StaticResource ListViewItemStyle}" />

            </StackPanel>

        </ContentDialog>
        
        <!--#endregion-->

    </Grid>
</Page>
