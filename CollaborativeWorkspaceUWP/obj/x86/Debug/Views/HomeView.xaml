<Page x:ConnectionId='1'
    x:Class="CollaborativeWorkspaceUWP.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CollaborativeWorkspaceUWP.Views"
    xmlns:models="using:CollaborativeWorkspaceUWP.Models"
    xmlns:vm="using:CollaborativeWorkspaceUWP.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        >

    <Page.DataContext>
        <vm:MainViewModel />
    </Page.DataContext>

    <Page.Resources>

        <Style x:ConnectionId='2' TargetType="Button" x:Name="RetractableMenuButton">
            <Setter Property="Margin" Value="0, 10, 10, 10" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="Width" Value="Auto" />
            <Setter Property="CornerRadius" Value="3" />
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
            <Setter Property="Content" Value="&#xE700;" />
        </Style>

        <Style x:ConnectionId='3' TargetType="Button" x:Name="HomwButton">
            <Setter Property="Margin" Value="0, 10, 10, 10" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="Width" Value="Auto" />
            <Setter Property="CornerRadius" Value="3" />
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
            <Setter Property="Content" Value="&#xE80F;" />
        </Style>

        <Style x:ConnectionId='4' TargetType="Button" x:Name="ProjectViewButton">
            <Setter Property="Margin" Value="0, 10, 10, 10" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="Width" Value="Auto" />
            <Setter Property="CornerRadius" Value="3" />
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
            <Setter Property="Content" Value="&#xE70B;" />
        </Style>

        <Style x:ConnectionId='5' TargetType="Button" x:Name="TaskViewButton">
            <Setter Property="Margin" Value="0, 10, 10, 10" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="Width" Value="Auto" />
            <Setter Property="CornerRadius" Value="3" />
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
            <Setter Property="Content" Value="&#xE73A;" />
        </Style>

        <Style x:ConnectionId='6' TargetType="Button" x:Name="SprintViewButton">
            <Setter Property="Margin" Value="0, 10, 10, 10" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="Width" Value="Auto" />
            <Setter Property="CornerRadius" Value="3" />
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
            <Setter Property="Content" Value="&#xE804;" />
        </Style>
    </Page.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StackPanel x:ConnectionId='7' Name="TopBar" 
                    Grid.Row="0"
                    Grid.ColumnSpan="2"
                    Style="{StaticResource TitleBar}">
            <Button x:ConnectionId='11' Name="HomeViewBtn" 
                    Style="{StaticResource HomwButton}" 
                                             />
            <Button x:ConnectionId='12' Name="ProjectViewBtn" 
                    Style="{StaticResource ProjectViewButton}" 
                                                    />
            <Button x:ConnectionId='13' Name="TaskViewBtn" 
                    Style="{StaticResource TaskViewButton}" 
                                                 />
            <Button x:ConnectionId='14' Name="SprintViewBtn" 
                    Style="{StaticResource SprintViewButton}" 
                                                   />
        </StackPanel>

        <Frame x:ConnectionId='8' Name="HomeViewFrame" 
               Grid.ColumnSpan="2"
               Style="{StaticResource HomeViewFrame}"
               Grid.Row="1"/>

        <SplitView IsPaneOpen="{Binding IsTaskWindowOpen, Mode=TwoWay}"
                   DisplayMode="Overlay"
                   PanePlacement="Right"
                   OpenPaneLength="1000"
                   Grid.Row="0"
                   Grid.RowSpan="2"
                   Grid.Column="1">
            <SplitView.Pane>
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:ConnectionId='9' Name="TaskTitleIcon" 
                               FontFamily="Segoe MDL2 Assets"
                               Text="&#xE73A;" />
                    <TextBlock x:ConnectionId='10' Name="TaskTitle"
                               Text="{Binding CurrentTask.Name, Mode=TwoWay}" />
                </StackPanel>
            </SplitView.Pane>
        </SplitView>
    </Grid>
</Page>

